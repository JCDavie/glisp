*, ::after, ::before
	box-sizing border-box
	outline none
	-webkit-tap-highlight-color transparent

html, body
	overflow hidden
	height 100vh
	--ease cubic-bezier(0.22, 0, 0.02, 1)

html
	font-size 12px
	font-family 'Fira Code', monospace
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

button
	outline none
	border none
	background none
	user-select none

#app
	position relative
	overflow hidden
	width 100%
	height 100%
	height 100vh