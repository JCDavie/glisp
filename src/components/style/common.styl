font-monospace()
	letter-spacing 0
	font-family 'Fira Code', monospace
	font-variant-ligatures normal !important

$input-height = 1.4em

input()
	width 6em
	height $input-height
	border none
	border-bottom 1px dashed var(--comment)
	background transparent
	color var(--foreground)
	font-size inherit

translucent-bg()
	background var(--translucent)
	backdrop-filter blur(16px)